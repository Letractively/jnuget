<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>JNuGet</display-name>
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>ru.aristar.jnuget</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LauncherServlet</servlet-name>
        <servlet-class>ru.aristar.jnuget.common.LauncherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/nuget/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LauncherServlet</servlet-name>
        <url-pattern>/LauncherServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <!-- Права доступа -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Администраторы сервера</description>
        <role-name>jnuget-admin</role-name>
    </security-role>
    <security-role>
        <description>Пользователи, имеющие доступ к GUI</description>
        <role-name>jnuget-gui</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>jnuget-read</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>jnuget-push</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>jnuget-delete</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/login.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>GUI view</display-name>
        <web-resource-collection>
            <web-resource-name>GUI Area</web-resource-name>
            <url-pattern>/sourceManager.xhtml</url-pattern>
            <url-pattern>/packageDetails.xhtml</url-pattern>
            <url-pattern>/storageContents.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>jnuget-gui</role-name>
            <role-name>jnuget-admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Administrator</display-name>
        <web-resource-collection>
            <web-resource-name>Administrator Area</web-resource-name>
            <url-pattern>/storageOptions.xhtml</url-pattern>
            <url-pattern>/usersOptions.xhtml</url-pattern>
            <url-pattern>/commonOptions.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>jnuget-admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
